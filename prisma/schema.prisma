// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  SCOUT
  COACH
  ADMIN
}

enum Position {
  GK
  DF
  MF
  FW
}

enum InjuryStatus {
  FIT
  QUESTIONABLE
  INJURED
  RECOVERING
}

enum TalkCategory {
  TECHNICAL
  TACTICAL
  PHYSICAL
  MENTAL
  BEHAVIOR
}

enum TrainingPartCategory {
  WARM_UP
  TECHNICAL
  TACTICAL
  PHYSICAL
  COOL_DOWN
  GAME
  OTHER
}

model User {
  id                String                    @id @default(cuid())
  clerkId           String?                   @unique
  email             String                    @unique
  name              String?
  role              Role                      @default(SCOUT)
  teams             Team[]                    @relation("TeamMembers")
  sentInvites       Invite[]                  @relation("InviteSender")
  receivedInvites   Invite[]                  @relation("InviteReceiver")
  developmentTalks  DevelopmentTalk[]         @relation("TalkCoach")
  trainingTemplates TrainingSessionTemplate[] @relation("TemplateCreator")
  createdAt         DateTime                  @default(now())
  updatedAt         DateTime                  @updatedAt

  @@map("users")
}

model Club {
  id        String   @id @default(cuid())
  name      String   @unique
  logoUrl   String?
  teams     Team[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("clubs")
}

model Team {
  id                         String                      @id @default(cuid())
  name                       String                      @unique
  logoUrl                    String?
  clubId                     String?
  club                       Club?                       @relation(fields: [clubId], references: [id], onDelete: SetNull)
  members                    User[]                      @relation("TeamMembers")
  players                    Player[]
  matches                    Match[]                     @relation("TeamMatches")
  homeMatches                Match[]                     @relation("HomeMatches")
  awayMatches                Match[]                     @relation("AwayMatches")
  invites                    Invite[]
  matchEvents                MatchEvent[]
  trainingSessions           TrainingSession[]
  recurringTrainingSchedules RecurringTrainingSchedule[] @relation("RecurringSchedules")
  createdAt                  DateTime                    @default(now())
  updatedAt                  DateTime                    @updatedAt

  @@map("teams")
}

model Player {
  id               String            @id @default(cuid())
  firstName        String
  lastName         String
  dateOfBirth      DateTime?
  position         Position
  profileImageUrl  String?
  injuryStatus     InjuryStatus?     @default(FIT)
  jerseyNumber     Int?
  contractStatus   Boolean?          @default(true)
  teamId           String?
  team             Team?             @relation(fields: [teamId], references: [id], onDelete: SetNull)
  stats            MatchStats[]
  developmentTalks DevelopmentTalk[]
  squad            GameSquad[]
  lineupPositions  LineupPosition[]
  matchEvents      MatchEvent[]
  relatedEvents    MatchEvent[]      @relation("RelatedPlayerEvents")
  playerMinutes    PlayerMinutes[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  @@map("players")
}

enum FormationType {
  ELEVEN_V_ELEVEN
  NINE_V_NINE
  SEVEN_V_SEVEN
}

enum MatchType {
  FRIENDLY
  LEAGUE
  CUP
  TOURNAMENT
}

enum TournamentType {
  LEAGUE
  CUP
  TOURNAMENT
}

model Tournament {
  id          String         @id @default(cuid())
  name        String
  type        TournamentType
  startDate   DateTime?
  endDate     DateTime?
  description String?
  matches     Match[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@map("tournaments")
}

enum SquadStatus {
  CALLED
  STARTING
  BENCH
}

enum MatchEventType {
  GOAL
  ASSIST
  YELLOW_CARD
  RED_CARD
  SUB_ON
  SUB_OFF
}

model Match {
  id              String           @id @default(cuid())
  date            DateTime
  time            DateTime?
  venue           String?
  venueName       String?
  opponent        String
  opponentName    String?
  opponentLogoUrl String?
  matchType       MatchType?       @default(FRIENDLY)
  tournamentId    String?
  tournament      Tournament?      @relation(fields: [tournamentId], references: [id], onDelete: SetNull)
  teamId          String
  team            Team             @relation("TeamMatches", fields: [teamId], references: [id], onDelete: Cascade)
  homeTeamId      String?
  homeTeam        Team?            @relation("HomeMatches", fields: [homeTeamId], references: [id], onDelete: SetNull)
  awayTeamId      String?
  awayTeam        Team?            @relation("AwayMatches", fields: [awayTeamId], references: [id], onDelete: SetNull)
  scoreHome       Int              @default(0)
  scoreAway       Int              @default(0)
  formationType   FormationType?   @default(ELEVEN_V_ELEVEN)
  stats           MatchStats[]
  squad           GameSquad[]
  formations      Formation[]
  lineupPositions LineupPosition[]
  events          MatchEvent[]
  playerMinutes   PlayerMinutes[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  @@map("matches")
}

model GameSquad {
  id        String      @id @default(cuid())
  gameId    String
  game      Match       @relation(fields: [gameId], references: [id], onDelete: Cascade)
  playerId  String
  player    Player      @relation(fields: [playerId], references: [id], onDelete: Cascade)
  status    SquadStatus @default(CALLED)
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@unique([gameId, playerId])
  @@map("game_squads")
}

model Formation {
  id            String        @id @default(cuid())
  gameId        String
  game          Match         @relation(fields: [gameId], references: [id], onDelete: Cascade)
  formationName String // e.g. "4-3-3", "4-4-2"
  formationType FormationType @default(ELEVEN_V_ELEVEN)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  @@map("formations")
}

model LineupPosition {
  id           String   @id @default(cuid())
  gameId       String
  game         Match    @relation(fields: [gameId], references: [id], onDelete: Cascade)
  playerId     String
  player       Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  positionCode String // e.g. "GK", "RB", "LB", "CB", "CM", "LW", "RW", "ST"
  x            Float?
  y            Float?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([gameId, playerId])
  @@map("lineup_positions")
}

model MatchEvent {
  id              String         @id @default(cuid())
  gameId          String
  game            Match          @relation(fields: [gameId], references: [id], onDelete: Cascade)
  minute          Int
  type            MatchEventType
  playerId        String
  player          Player         @relation(fields: [playerId], references: [id], onDelete: Cascade)
  relatedPlayerId String? // For assist or sub on/off
  relatedPlayer   Player?        @relation("RelatedPlayerEvents", fields: [relatedPlayerId], references: [id], onDelete: SetNull)
  teamId          String?
  team            Team?          @relation(fields: [teamId], references: [id], onDelete: SetNull)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt

  @@map("match_events")
}

model PlayerMinutes {
  id        String   @id @default(cuid())
  gameId    String
  game      Match    @relation(fields: [gameId], references: [id], onDelete: Cascade)
  playerId  String
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  minuteOn  Int // Minute when player came on (0 for starters)
  minuteOff Int? // Minute when player went off (null if still on)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("player_minutes")
}

model MatchStats {
  id        String   @id @default(cuid())
  playerId  String
  player    Player   @relation(fields: [playerId], references: [id], onDelete: Cascade)
  matchId   String
  match     Match    @relation(fields: [matchId], references: [id], onDelete: Cascade)
  goals     Int      @default(0)
  assists   Int      @default(0)
  minutes   Int      @default(0)
  rating    Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([playerId, matchId])
  @@map("match_stats")
}

model Invite {
  id         String   @id @default(cuid())
  email      String
  teamId     String
  team       Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  senderId   String
  sender     User     @relation("InviteSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiverId String?
  receiver   User?    @relation("InviteReceiver", fields: [receiverId], references: [id], onDelete: SetNull)
  accepted   Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("invites")
}

model DevelopmentTalk {
  id           String       @id @default(cuid())
  playerId     String
  player       Player       @relation(fields: [playerId], references: [id], onDelete: Cascade)
  coachId      String
  coach        User         @relation("TalkCoach", fields: [coachId], references: [id], onDelete: Cascade)
  category     TalkCategory
  notes        String
  goals        String?
  actionPoints String?
  attachments  String[]     @default([])
  followUpDate DateTime?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  @@map("development_talks")
}

model TrainingSessionTemplate {
  id                 String                        @id @default(cuid())
  name               String
  createdBy          String
  creator            User                          @relation("TemplateCreator", fields: [createdBy], references: [id], onDelete: Cascade)
  daysOfWeek         Int[]                         @default([]) // Array of day numbers (0=Sunday, 1=Monday, etc.)
  playerIds          String[]                      @default([]) // Array of player IDs for suggested players
  parts              TrainingSessionTemplatePart[]
  recurringSchedules RecurringTrainingSchedule[]
  createdAt          DateTime                      @default(now())
  updatedAt          DateTime                      @updatedAt

  @@map("training_session_templates")
}

model TrainingSessionTemplatePart {
  id         String                  @id @default(cuid())
  templateId String
  template   TrainingSessionTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  name       String
  category   TrainingPartCategory
  duration   Int // in minutes
  notes      String?
  orderIndex Int
  createdAt  DateTime                @default(now())
  updatedAt  DateTime                @updatedAt

  @@map("training_session_template_parts")
}

model TrainingSession {
  id                  String                     @id @default(cuid())
  teamId              String
  team                Team                       @relation(fields: [teamId], references: [id], onDelete: Cascade)
  name                String
  date                DateTime
  time                DateTime?
  location            String?
  templateId          String?
  recurringScheduleId String?
  recurringSchedule   RecurringTrainingSchedule? @relation(fields: [recurringScheduleId], references: [id], onDelete: SetNull)
  parts               TrainingSessionPart[]
  createdAt           DateTime                   @default(now())
  updatedAt           DateTime                   @updatedAt

  @@map("training_sessions")
}

model RecurringTrainingSchedule {
  id         String                   @id @default(cuid())
  teamId     String
  team       Team                     @relation("RecurringSchedules", fields: [teamId], references: [id], onDelete: Cascade)
  name       String
  daysOfWeek Int[] // Array of day numbers (0=Sunday, 1=Monday, etc.)
  startDate  DateTime
  endDate    DateTime?
  time       String? // Time in HH:mm format
  location   String?
  templateId String?
  template   TrainingSessionTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  sessions   TrainingSession[]
  createdAt  DateTime                 @default(now())
  updatedAt  DateTime                 @updatedAt

  @@map("recurring_training_schedules")
}

model TrainingSessionPart {
  id         String               @id @default(cuid())
  sessionId  String
  session    TrainingSession      @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  name       String
  category   TrainingPartCategory
  duration   Int // in minutes
  notes      String?
  orderIndex Int
  createdAt  DateTime             @default(now())
  updatedAt  DateTime             @updatedAt

  @@map("training_session_parts")
}
